generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movie {
  id             Int       @id @default(autoincrement())
  title          String
  synopsis       String
  classification String
  duration       String
  genre          String
  banner_url     String
  Session        Session[]

  @@map("movies")
}

model Session {
  id      Int           @id @default(autoincrement())
  movieId Int
  time    SessionTime[]
  movie   Movie         @relation(fields: [movieId], references: [id])
  active  Boolean       @default(true)

  @@map("sessions")
}

model SessionTime {
  id   Int      @id @default(autoincrement())
  time DateTime

  Session   Session? @relation(fields: [sessionId], references: [id])
  sessionId Int?

  @@map("session_time")
}
